@{
}
@model List<Note>

 <body class="bg-3">
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Note</th>
                <th scope="col">Description: </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="bg-2">
            @foreach (var note in Model)
            {
                <tr>
                    <td>
                       <a asp-controller="Note" asp-action="Done" asp-route-id="@note.Id">
                        @if (note.IsDone)
                        {
                            <s>@note.Title</s>
                        }
                        else
                     
                        {
                            @note.Title
                        }
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Note" asp-action="Done" asp-route-id="@note.Id">
                        @if (note.IsDone)
                        {
                            <s>@note.Description</s>
                        }
                        else
                        {
                            @note.Description
                        }
                        </a>
                    </td>

         
                    <td class="text-center">
                        <a asp-controller="Note" asp-action="Update" asp-route-id="@note.Id">
                            <button class="m-1 btn btn-outline-warning">Update</button>
                        </a>
                        <a asp-controller="Note" asp-action="Delete" asp-route-id="@note.Id">
                            <button class="m-1 btn btn-outline-danger">Delete</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Note" asp-action="Add">
        <button class="m-1 btn btn-outline-success">Add Note</button>
    </a>

</div>
</body>
